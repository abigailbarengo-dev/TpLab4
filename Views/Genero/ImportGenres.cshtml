@model TpLab4.Models.Genero

@{
    ViewData["Title"] = "ImportGenres";
}

<h1>ImportGenres</h1>

<h4>Genero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ImportGenres" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Seleccione un archivo</label>
                <input type="file" class="form-control" name="file" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Importar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}